<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_video_parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp200"
        android:background="@color/black_deep">

        <com.zhiyicx.thinksnsplus.modules.shortvideo.helper.ZhiyiVideoView
            android:id="@+id/videoplayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_normal"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/size_sub_title"
            tools:text="流动性捉襟见肘，新三板如履薄冰" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp46"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/user_avatar"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_width="@dimen/dp25"
            android:layout_height="@dimen/dp25"/>

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/dp80"
            android:layout_marginLeft="@dimen/dp8"
            tools:text="我是发布人我是发布人"
            android:textSize="@dimen/sp13"
            android:singleLine="true"
            android:textColor="@color/black_deep"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_comment_count"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp14"
            android:singleLine="true"
            android:textColor="@color/black_deep"
            android:text="0"
            android:drawablePadding="@dimen/dp8"
            android:gravity="center"
            android:drawableLeft="@mipmap/icon_video_comment"/>

        <TextView
            android:id="@+id/tv_dig_count"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp14"
            android:singleLine="true"
            android:drawablePadding="@dimen/dp8"
            android:textColor="@color/black_deep"
            android:text="0"
            android:gravity="center"
            android:drawableLeft="@drawable/selector_video_like"/>

    </LinearLayout>

</LinearLayout>
