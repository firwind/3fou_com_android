<?xml version="1.0" encoding="utf-8"?>
<com.wcy.overscroll.OverScrollLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginTop="@dimen/dp20"
            android:text="@string/write_verify_info"
            android:textSize="@dimen/dp16" />

        <com.zhiyicx.baseproject.widget.edittext.DeleteEditText
            android:id="@+id/et_verify_friends_info"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp20"
            android:layout_marginTop="@dimen/dp10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp140"
            android:background="@color/edit_back_color"
            android:gravity="top"
            android:padding="@dimen/dp10"
            android:textColor="@color/video_window_background"
            android:textSize="@dimen/margin_14"
            android:maxLength="20"/>

    </LinearLayout>
</com.wcy.overscroll.OverScrollLayout>