<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/flash_details_sv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp200"
                    android:background="@color/themeColor"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/flash_detail_logo" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp20"
                        android:src="@mipmap/flash_message_logo" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_bull"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp20"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/rise_select"
                        android:drawablePadding="@dimen/dp5"
                        android:gravity="left"
                        android:text="利好 100"
                        android:textColor="@color/bull_title" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp20"
                        android:layout_weight="1"
                        android:gravity="right">

                        <TextView
                            android:id="@+id/tv_bear_news"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/fall_select"

                            android:drawablePadding="@dimen/dp5"
                            android:text="利空 100"
                            android:textColor="@color/text_fall" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp20"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/view_bull"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp2"
                        android:layout_weight="1"
                        android:background="@color/bull_title" />

                    <View
                        android:id="@+id/view_fall"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp2"
                        android:layout_weight="1"
                        android:background="@color/text_fall" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/flash_detail_bg"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp20"
                        android:drawableLeft="@mipmap/clock"
                        android:drawablePadding="@dimen/dp10"
                        android:text="19分钟前"
                        android:textColor="@color/black_deep" />

                    <com.zhiyicx.thinksnsplus.widget.NoDefaultPadingTextView
                        android:id="@+id/tv_info_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_normal"
                        android:layout_marginLeft="@dimen/dp20"
                        android:layout_marginRight="@dimen/dp20"
                        android:layout_marginTop="@dimen/dp20"
                        android:ellipsize="end"
                        android:gravity="bottom"
                        android:maxLines="2"
                        android:textColor="@color/important_for_content"
                        android:textSize="@dimen/size_sub_title"
                        android:textStyle="bold"
                        tools:text="流动性捉襟见肘，新三板如履薄冰" />

                    <com.zhiyicx.thinksnsplus.widget.NoDefaultPadingTextView
                        android:id="@+id/tv_info_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_normal"
                        android:layout_marginLeft="@dimen/dp20"
                        android:layout_marginRight="@dimen/dp20"
                        android:gravity="bottom"
                        android:text="根据韩国业内人士称，。目前，，因为一旦在交易所上市，他们就可以获得大量的融资。 一家区块链公司的首席执行官表示，我接到一位经纪人的电话，他介绍了一位交易所高管，并告诉我，如果我支付佣金，我的公司可以在大型交易所快速上市。甚至有经纪人说他们可以操纵上市货币的排名。他们称，通过支付佣金，可以提高品牌知名度较低的公司Token价值。"
                        android:textColor="@color/important_for_content"
                        android:textSize="@dimen/size_content" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp30"
                        android:layout_marginLeft="@dimen/dp20"
                        android:layout_marginRight="@dimen/dp20"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableLeft="@mipmap/share"
                            android:drawablePadding="@dimen/dp10"
                            android:text="@string/share_source" />

                        <LinearLayout

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_qrcode"
                                android:layout_width="@dimen/invite_img_size_v2"
                                android:layout_height="@dimen/invite_img_size_v2"
                                android:layout_marginTop="20dp"
                                android:src="@drawable/shape_default_image" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp10"
                                android:text="@string/flash_hint"
                                android:textColor="@color/black_deep" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_share"
                android:layout_width="match_parent"
                android:layout_height="@dimen/invite_share_height">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/toolbar_height"
        android:layout_height="@dimen/toolbar_height"
        android:scaleType="centerInside"
        android:src="@mipmap/topbar_back_white"/>

</FrameLayout>