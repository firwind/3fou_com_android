<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/question_invite_width"
        android:layout_height="@dimen/question_invite_height"
        android:gravity="center"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/button_corner_small"
        app:contentPaddingLeft="@dimen/spacing_small"
        app:contentPaddingRight="@dimen/spacing_small"
        app:cardElevation="@dimen/button_corner_small">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

        <com.zhiyicx.baseproject.widget.UserAvatarView
                android:id="@+id/iv_user_portrait"
                android:layout_width="@dimen/question_invite_portrait_width"
                android:layout_height="@dimen/question_invite_portrait_width"/>

        <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_icon_assist"
                android:textColor="@color/normal_for_dynamic_list_content"
                android:layout_marginLeft="@dimen/spacing_normal"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="xxxxxxxxxxxxxxxxxxxxxxxxxx"/>
    </LinearLayout>


</android.support.v7.widget.CardView>