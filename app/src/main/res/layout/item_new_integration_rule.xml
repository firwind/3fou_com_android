<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp12"
    android:id="@+id/ll_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/dp18"
            android:layout_height="@dimen/dp18"
            android:scaleType="centerInside"/>

        <TextView
            android:id="@+id/tv_rule"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            tools:text="注册会员+送1000糖果"
            android:singleLine="true"
            android:textColor="@color/black_deep"/>

        <TextView
            android:id="@+id/tv_invite"
            android:layout_width="@dimen/dp68"
            android:layout_height="@dimen/dp28"
            android:textColor="@color/themeColor"
            android:text="立即邀请"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/sp12"
            android:background="@drawable/shape_circle_stroke_1dp_theme_color"/>

        <ImageView
            android:id="@+id/iv_expand"
            android:paddingLeft="@dimen/dp16"
            android:paddingRight="@dimen/dp16"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/sec_nav_arrow"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_rule_desc"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp30"
        android:paddingRight="@dimen/dp16"
        android:textSize="@dimen/sp13"
        android:text="注册下载APP并登陆成功，奖励1000糖果"/>

    <View
        android:layout_marginRight="@dimen/dp12"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line"/>

</LinearLayout>
