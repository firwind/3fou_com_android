<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout

        android:orientation="vertical"
        android:layout_margin="@dimen/margin_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_notice_details_title"
            android:textColor="@color/common_bottom_bar_selected_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/margin_16"
            android:text="标题"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/button_corner_small_3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_notice_details_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张小哇"
                android:textColor="@color/grid_state_focused"
                android:textSize="@dimen/margin_12" />

            <TextView
                android:id="@+id/tv_notice_details_time"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2018年6月19号"
                android:textColor="@color/grid_state_focused"
                android:textSize="@dimen/margin_12" />
        </LinearLayout>

    </LinearLayout>
    <View
        style="@style/style_divider_horizontal"/>
    <TextView
        android:id="@+id/tv_notice_details_content"
        android:textColor="@color/common_bottom_bar_selected_bg"
        android:textSize="@dimen/margin_14"
        android:layout_margin="@dimen/dp10"
        android:text="公告内容"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>