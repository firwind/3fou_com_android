<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/circle_detail_head_iamge_height"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="@dimen/spacing_mid">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/circle_detail_head_iamge_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.zhiyicx.baseproject.widget.imageview.FilterImageView
            android:id="@+id/uv_group_head"
            android:layout_width="@dimen/circle_member_head"
            android:layout_height="@dimen/circle_member_head"
            android:layout_marginRight="@dimen/spacing_mid" />

        <TextView
            android:id="@+id/tv_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_mid"
            android:ellipsize="middle"
            android:singleLine="true"
            android:textColor="@color/important_for_content"
            android:textSize="@dimen/size_rank_number" />
    </LinearLayout>
    <View
        style="@style/style_divider_horizontal"
        />
</LinearLayout>