<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                     xmlns:app="http://schemas.android.com/apk/res-auto"
                                     xmlns:tools="http://schemas.android.com/tools"
                                     android:orientation="vertical"
                                     android:layout_width="match_parent"
                                     android:layout_height="match_parent"
                                     android:background="@color/white">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <!--个人认证填写信息-->
            <LinearLayout
                    android:id="@+id/ll_company_personage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">
                <!--个人认证-->
                <com.zhiyicx.baseproject.widget.edittext.InfoInputEditText
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/certification_input_item_height"
                        app:isRequired="visiable"
                        app:leftHintText="@string/certification_basic_info_name"
                        app:rightHint="@string/name_hint"
                        app:rightMaxLength="8"
                        app:rightInputType="text"/>

                <!--身份证号码-->
                <com.zhiyicx.baseproject.widget.edittext.InfoInputEditText
                        android:id="@+id/tv_id_card"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/certification_input_item_height"
                        app:isRequired="visiable"
                        app:leftHintText="@string/certification_basic_info_id_card"
                        app:rightHint="@string/id_card_hint"
                        app:rightMaxLength="18"/>

                <!--手机号码-->
                <com.zhiyicx.baseproject.widget.edittext.InfoInputEditText
                        android:id="@+id/tv_phone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/certification_input_item_height"
                        app:isRequired="visiable"
                        app:leftHintText="@string/certification_basic_info_phone"
                        app:rightHint="@string/info_phone_hint"
                        app:rightMaxLength="11"
                        app:rightInputType="phone"/>
            </LinearLayout>

            <!--企业认证填写信息-->
            <LinearLayout
                    android:id="@+id/ll_company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                <!--机构名称-->
                <com.zhiyicx.baseproject.widget.edittext.InfoInputEditText
                        android:id="@+id/tv_company_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/certification_input_item_height"
                        app:isRequired="visiable"
                        app:leftHintText="@string/certification_basic_info_company_name"
                        app:rightHint="@string/company_name_hint"
                        app:rightMaxLength="20"
                        app:rightInputType="text"/>
                <!--机构地址-->
                <com.zhiyicx.baseproject.widget.edittext.InfoInputEditText
                        android:id="@+id/tv_company_address"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/certification_input_item_height"
                        app:isRequired="visiable"
                        app:leftHintText="@string/certification_basic_info_company_address"
                        app:rightHint="@string/company_address_hint"
                        app:rightMaxLength="50"
                        app:rightInputType="text"/>
                <!--机构负责人-->
                <com.zhiyicx.baseproject.widget.edittext.InfoInputEditText
                        android:id="@+id/tv_company_principal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/certification_input_item_height"
                        app:isRequired="visiable"
                        app:leftHintText="@string/certification_basic_info_company_principal_name"
                        app:rightHint="@string/principal_name_hint"
                        app:rightMaxLength="8"
                        app:rightInputType="text"/>
                <!--机构负责人身份证号码-->
                <com.zhiyicx.baseproject.widget.edittext.InfoInputEditText
                        android:id="@+id/tv_company_principal_id_card"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/certification_input_item_height"
                        app:isRequired="visiable"
                        app:leftHintText="@string/certification_basic_info_principal_id_card"
                        app:rightHint="@string/company_principal_id_card_hint"
                        app:rightMaxLength="18"/>
                <!--机构负责人电话-->
                <com.zhiyicx.baseproject.widget.edittext.InfoInputEditText
                        android:id="@+id/tv_company_principal_phone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/certification_input_item_height"
                        app:isRequired="visiable"
                        app:leftHintText="@string/certification_basic_info_company_principal_phone"
                        app:rightHint="@string/info_phone_hint"
                        app:rightMaxLength="11"
                        app:rightInputType="phone"/>
            </LinearLayout>
        </FrameLayout>

        <!--认证描述-->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="18dp"
                android:orientation="horizontal"
                android:minHeight="@dimen/certification_input_item_height">

            <!--是否必填-->
            <TextView
                    android:id="@+id/tv_flag_required"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/size_content_assist"
                    android:textColor="@android:color/holo_red_light"
                    android:layout_marginLeft="@dimen/spacing_mid"/>

            <TextView
                    android:id="@+id/tv_left_text"
                    android:layout_width="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="@dimen/certify_margin_top"
                    android:layout_height="wrap_content"
                    android:textColor="@color/important_for_content"
                    android:textSize="@dimen/size_content_assist"
                    android:text="@string/certification_basic_info_description"/>

            <com.zhiyicx.thinksnsplus.widget.UserInfoInroduceInputView
                android:layout_marginTop="@dimen/certify_margin_top"
                android:id="@+id/edit_input_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_mid"
                android:layout_marginRight="@dimen/spacing_mid"
                app:hintContent="@string/description_hint"
                app:limitSize="@integer/certification_description_max_length"
                app:showLimitSize="@integer/certification_description_show_limit_length"
              />
        </LinearLayout>

        <ImageView style="@style/style_divider_horizontal"/>

        <!--登录异常相关提示-->
        <include
                layout="@layout/include_error_tip_text"/>

        <com.zhiyicx.baseproject.widget.button.LoadingButton
                android:id="@+id/bt_to_send"
                style="@style/style_login_button"
                android:layout_marginTop="@dimen/button_login_margin_top"
                android:enabled="false"
                app:text="@string/next"/>
    </LinearLayout>


</android.support.v4.widget.NestedScrollView>