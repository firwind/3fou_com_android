<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp66"
    android:gravity="center_vertical">

    <RelativeLayout
        android:paddingLeft="20dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_btc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BTC"
            android:textStyle="bold"
            android:textSize="@dimen/sp16"
            android:textColor="@color/text_color_black"/>

        <TextView
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/tv_btc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="usdt"
            android:textSize="@dimen/sp12"/>

        <TextView
            android:layout_marginTop="6dp"
            android:layout_below="@id/tv_btc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="量 539.2"
            android:textSize="@dimen/sp12"/>

    </RelativeLayout>

    <LinearLayout
        android:paddingLeft="20dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$6385.00"
            android:textSize="@dimen/sp16"
            android:textColor="@color/market_red"/>

        <TextView
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp12"
            android:text="¥40974.00" />

    </LinearLayout>

    <LinearLayout
        android:paddingLeft="20dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="@dimen/dp32"
            android:layout_height="@dimen/dp16"
            android:textSize="@dimen/sp10"
            android:text="-5.01%"
            android:background="@drawable/shape_radius_2dp_bg_red"/>

        <ImageView
            android:padding="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_stock_certificate"/>

    </LinearLayout>

</LinearLayout>
