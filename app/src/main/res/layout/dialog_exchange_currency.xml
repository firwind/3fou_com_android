<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp290"
    android:layout_height="@dimen/dp280"
    android:paddingLeft="@dimen/dp12"
    android:paddingRight="@dimen/dp12"
    android:background="@color/white"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="@dimen/dp12"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp30"
        android:paddingBottom="@dimen/dp4"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="ETH可用量"
            android:gravity="bottom"
            android:textSize="@dimen/sp13"/>

        <TextView
            android:id="@+id/tv_avaliable_balance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|bottom"
            android:text="0.00"
            android:textSize="@dimen/sp13"/>

    </LinearLayout>

    <View
        style="@style/style_divider_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp30"
        android:paddingBottom="@dimen/dp4"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="兑换比率"
            android:gravity="bottom"
            android:textSize="@dimen/sp13"/>

        <TextView
            android:id="@+id/tv_exchange_rate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|bottom"
            android:text="1:2000"
            android:textSize="@dimen/sp13"/>

    </LinearLayout>

    <View
        style="@style/style_divider_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp30"
        android:paddingBottom="@dimen/dp4"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="本次兑换BCB量"
            android:gravity="bottom"
            android:textSize="@dimen/sp13"/>

        <EditText
            android:id="@+id/et_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|bottom"
            android:background="@null"
            android:hint="请输入数量"
            android:textSize="@dimen/sp13"/>

    </LinearLayout>

    <View
        style="@style/style_divider_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp30"
        android:paddingBottom="@dimen/dp4"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="本次兑换BCB消耗ETH量"
            android:gravity="bottom"
            android:textSize="@dimen/sp13"/>

        <TextView
            android:id="@+id/tv_cost_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|bottom"
            android:text="0.00"
            android:textSize="@dimen/sp13"/>

    </LinearLayout>

    <View
        style="@style/style_divider_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp30"
        android:paddingBottom="@dimen/dp4"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="请输入手机验证码"
            android:gravity="bottom"
            android:textSize="@dimen/sp13"/>

        <EditText
            android:id="@+id/et_verify_code"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|bottom"
            android:background="@null"
            android:hint="请输入验证码"
            android:textSize="@dimen/sp13"/>

        <TextView
            android:id="@+id/tv_send_verify_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|bottom"
            android:text="发送验证码"
            android:textColor="@color/black_deep"
            android:textSize="@dimen/sp13"/>

    </LinearLayout>

    <View
        style="@style/style_divider_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp30"
        android:paddingBottom="@dimen/dp4"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="交易密码"
            android:gravity="bottom"
            android:textSize="@dimen/sp13"/>

        <EditText
            android:id="@+id/et_deal_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|bottom"
            android:background="@null"
            android:hint="请输入交易密码"
            android:textSize="@dimen/sp13"/>

    </LinearLayout>

    <View
        style="@style/style_divider_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp30"
        android:text="忘记密码？"
        android:gravity="center"
        android:layout_gravity="right"/>

    <LinearLayout
        android:layout_marginTop="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp28">

        <Button
            android:id="@+id/bt_confirm"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/themeColor"
            android:textColor="@color/white"
            android:text="提交"
            android:textSize="@dimen/sp13"/>

        <Button
            android:id="@+id/bt_reset"
            android:layout_marginLeft="@dimen/dp24"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/blue"
            android:textColor="@color/white"
            android:text="重置"
            android:textSize="@dimen/sp13"/>

        <Button
            android:id="@+id/bt_cancel"
            android:layout_marginLeft="@dimen/dp24"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/btn_gray_normal"
            android:textColor="@color/white"
            android:text="取消"
            android:textSize="@dimen/sp13"/>

    </LinearLayout>

</LinearLayout>
